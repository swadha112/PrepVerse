{
  "manifest_version": 3,
  "name": "PrepVerse â†” LeetCode",
  "version": "1.0.0",
  "action": { "default_popup": "popup.html", "default_title": "LeetCode Connector" },
  "permissions": ["storage", "tabs", "activeTab"],
  "host_permissions": [
    "https://leetcode.com/*",
    "http://localhost:4000/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}